{
  "name": "Pizzaer",
  "description": "Make the current page pizza",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page pizza",
    "default_icon" : "pizza.png"
  },
  "manifest_version": 2
}
